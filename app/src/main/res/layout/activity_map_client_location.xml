<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapClientLocation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cButtons"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/baseline_navigate_before_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Puedes recogerme en esta direccion?"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cImgUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/foto_2"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/cImgAndName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cImgUser"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Debian Soto Manuel"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/cAgeAndSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cImgAndName"
                android:layout_marginTop="-5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/ageUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="21 AÃ±os"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13dp"/>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/ic_baseline_circle_24"/>
                <TextView
                    android:id="@+id/schoolUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieria en software"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAccept"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cImgAndName"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="-30dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="8dp"
                    android:text="Aceptar"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/baseline_check_24"
                    app:tint="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDecline"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cImgAndName"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="-30dp"
            app:cardBackgroundColor="#9E1616"
            app:cardCornerRadius="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="8dp"
                    android:text="Rechazar"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_close_24"
                    app:tint="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>