<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgSchool"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/escuela"
        app:tint="#575757" />

    <TextView
        android:id="@+id/card_L_escuela"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/imgSchool"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="#575757"
        android:textSize="12dp"
        android:text="Facultad de Ingenieria Electromecanica"/>

    <TextView
        android:id="@+id/card_L_campus"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/imgSchool"
        android:layout_below="@+id/card_L_escuela"
        android:layout_marginTop="-2dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/poppins"
        android:textColor="#575757"
        android:textSize="15dp"
        android:text="Campues el Naranjo"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:tint="#01B1EA"/>

    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_height="1.5dp"
        android:layout_below="@+id/card_L_campus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#717171"/>

</RelativeLayout>