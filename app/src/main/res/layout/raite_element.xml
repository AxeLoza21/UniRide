<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cER"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginLeft="-30dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/purple_500"/>

                <!--Imagen Usuario-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPhotoUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="100dp">
                    <ImageView
                        android:id="@+id/imgUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/foto_2"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/cardNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/cardPhotoUser"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#575757"
                    android:textSize="18dp"
                    android:text="Juan Perez"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/cardAgeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardNameUser"
                    android:layout_marginTop="-5dp"
                    android:layout_toRightOf="@+id/cardPhotoUser"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="#575757"
                    android:textSize="12dp"
                    android:text="25 aÃ±os"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtSaleDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardPhotoUser"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#575757"
                    android:textSize="11dp"
                    android:text="Sale de:"/>

                <TextView
                    android:id="@+id/cardMiniDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSaleDe"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="#575757"
                    android:textSize="13dp"
                    android:text="Santiago"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtMasInformacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardMiniDireccion"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="#01B1EA"
                    android:textSize="12dp"
                    android:text="Pulsa para ver mas informacion"/>-->
            </RelativeLayout>

            <!--Linea-->
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:background="#E0E0E0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">
                <!--Datos 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imgTime"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/timer"
                        app:tint="#01B1EA" />
                    <TextView
                        android:id="@+id/txtRSalida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="#040415"
                        android:textSize="13dp"
                        android:text="Salida"/>
                    <TextView
                        android:id="@+id/cardSalida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtRSalida"
                        android:layout_marginTop="-8dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#3E3E3E"
                        android:textSize="16dp"
                        android:text="6:20 A.M"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#E0E0E0" />

                <!--Datos 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imgPerson"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/person_2"
                        app:tint="#01B1EA" />
                    <TextView
                        android:id="@+id/txtAsientos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="#040415"
                        android:textSize="13dp"
                        android:text="Asientos"/>
                    <TextView
                        android:id="@+id/cardAsientos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#3E3E3E"
                        android:textSize="16dp"
                        android:text="2"/>
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>