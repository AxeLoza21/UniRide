<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardView"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/primero"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_border"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/segundo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_eliminars2"
                        android:layout_width="16sp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="4.5sp"
                        android:padding="0dp"
                        app:srcCompat="@drawable/current_location" />

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtinitiation"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins"
                        android:text="La joya l, mercurio 24"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_eliminars4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    app:srcCompat="@drawable/line_2"
                    android:paddingStart="11dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_eliminars3"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:padding="1dp"
                        app:srcCompat="@drawable/baseline_location_on_24"/>

                    <Space
                        android:layout_width="5dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/poppins"
                        android:text="Campus el naranjo"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <TextView
                    android:id="@+id/txtSolicitudes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:text="Solicitudes"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txtSolicitudes"
                    android:layout_marginTop="5dp"
                    android:text="En Espera"
                    android:fontFamily="@font/poppins"
                    android:textSize="15dp"
                    android:visibility="invisible"/> <!--Esto solo se ve cuando NO eres el creador de la publicacion-->
                <ImageView
                    android:id="@+id/imgSolicitudes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/txtSolicitudes"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_message_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSolicitudes"
                    android:layout_marginTop="-7dp"
                    android:layout_toRightOf="@+id/imgSolicitudes"
                    android:text="0"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/btn_eliminars5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="1sp"
            android:layout_marginLeft="1sp"
            android:background="#EFEFF4" />

        <LinearLayout
            android:id="@+id/abajo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgCalendar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_baseline_calendar_month_24" />

                <TextView
                    android:id="@+id/txtCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/imgCalendar"
                    android:layout_marginLeft="2dp"
                    android:text="Enero 20 2023"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins"
                    android:textSize="14dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="/"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgHour"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/txtHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/imgHour"
                    android:layout_marginLeft="2dp"
                    android:text="6:20 P.M"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
            <!--<ImageView
                android:id="@+id/arrow"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginTop="3sp"
                android:padding="1sp"
                android:src="@drawable/baseline_arrow_forward_ios_24" />-->

</androidx.cardview.widget.CardView>
