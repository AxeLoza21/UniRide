<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionTravel">

    <ImageView
        android:id="@+id/Exit"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/baseline_navigate_before_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Exit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Agrega una descripción para tu publicación"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/et_descripction"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_below="@+id/txtDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_input"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:hint="Manten informados a tus pasajeros sobre algun detalle que quieras mencionar."
        android:paddingHorizontal="15dp"
        android:paddingTop="15dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btnSavePublication"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/et_descripction"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="87dp"
        android:fontFamily="@font/poppins"
        android:text="Publicar ahora"
        android:textAllCaps="false"
        android:textSize="19dp"
        app:cornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@+id/et_descripction" />


</RelativeLayout>