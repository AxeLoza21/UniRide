<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/regresar"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_navigate_before_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRegistro"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="22sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Registra tu vehículo"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regresar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        app:srcCompat="@drawable/image_11"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtRegistro2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="23sp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Agrega los datos de tu vehículo para comenzar un viaje"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtRegistro3"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="49sp"
        android:layout_marginEnd="48sp"
        android:layout_marginTop="15sp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Por seguridad de los usuarios se requiere ingresar los datos de tu vehículo"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistro2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnComenzar"
        android:layout_width="wrap_content"
        android:layout_height="64sp"
        android:layout_marginStart="118sp"
        android:layout_marginEnd="119sp"
        android:backgroundTint="#01B1EA"
        android:fontFamily="@font/poppins_bold"
        android:text="Comenzar"
        android:textAllCaps="false"
        android:layout_marginTop="10sp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="30sp"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistro3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>