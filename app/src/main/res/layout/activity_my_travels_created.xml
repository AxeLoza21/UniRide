<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyTravelsCreated">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/txtDetallesPublicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Detalles de la Publicacion"
        android:textColor="#040415"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtEstadoPublicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDetallesPublicacion"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="Estado de la Publicacion"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEstadoPublicacion"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/txtEstadoPublicacion"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#E8E8E8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/btnActivo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Activo"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:elevation="1dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/circleState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnPAndF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="En Pause /
                    Finalizado"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:elevation="1dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/circleState2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/txtSolicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardEstadoPublicacion"
        android:layout_marginTop="35dp"
        android:text="Solicitudes"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"
        android:gravity="center"/>

    <!--Linea-->
    <View
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@+id/txtSolicitudes"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="2dp"
        android:background="#E0E0E0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rSolicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp">
    </androidx.recyclerview.widget.RecyclerView>


    <!--Linea-->
    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_above="@+id/txtAcciones"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/txtAcciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cOpcionesPublicacion"
        android:text="Acciones"
        android:fontFamily="@font/poppins"
        android:textSize="16dp"
        android:gravity="center"/>

    <View
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_above="@+id/cOpcionesPublicacion"
        android:background="#E0E0E0" />


    <LinearLayout
        android:id="@+id/cOpcionesPublicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="#E3E3E3"
                    app:cardElevation="0dp"/>

                <ImageView
                    android:id="@+id/imgVPub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_baseline_preview_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver
                    Publicacion"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/txtAcciones"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="@color/purple_500"
                    app:cardElevation="0dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/baseline_edit_24_white"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar
                    Publicacion"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/txtAcciones"
            android:background="#E0E0E0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginHorizontal="20dp"
                    app:cardBackgroundColor="#AA1414"
                    app:cardElevation="0dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/baseline_delete_24"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar
                    Publicacion"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
